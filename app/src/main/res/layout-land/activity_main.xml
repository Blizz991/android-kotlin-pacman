<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="org.pondar.canvasdemokotlin.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.pondar.canvasdemokotlin.GameView
            android:id="@+id/gameView"
            android:layout_width="587dp"
            android:layout_height="match_parent">

        </org.pondar.canvasdemokotlin.GameView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Points: 0"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dp"
                    android:minHeight="48dip"
                    android:text="@string/moveUp"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/moveLeftButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveLeft"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveRightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveRight"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveDownButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveDown"
                    android:textSize="24sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!-- Notice how the custom view is referenced here with
    a full package path-->


</RelativeLayout>

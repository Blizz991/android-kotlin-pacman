<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:orientation="horizontal"
    tools:context="org.pondar.canvasdemokotlin.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:orientation="horizontal">

        <org.pondar.canvasdemokotlin.GameView
            android:id="@+id/gameView"
            android:layout_width="587dp"
            android:layout_height="match_parent">

        </org.pondar.canvasdemokotlin.GameView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="144dip"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/newGameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:text="@string/newGameBtn"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DF8602"
            android:text="@string/pauseBtn"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/timeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 00:00"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points: 0"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/levelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level: 1"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dp"
                    android:minHeight="48dip"
                    android:text="@string/moveUp"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/moveLeftButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveLeft"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveRightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveRight"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/moveDownButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxWidth="32dip"
                    android:maxHeight="32dip"
                    android:minWidth="48dip"
                    android:minHeight="48dip"
                    android:text="@string/moveDown"
                    android:textSize="24sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!-- Notice how the custom view is referenced here with
    a full package path-->


</RelativeLayout>
